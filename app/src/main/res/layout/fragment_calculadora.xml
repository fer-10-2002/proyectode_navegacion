<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".calculadora"
    android:theme="@style/Theme.CalculadoraBasica"
   >

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/mlcalculadora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_calculadora_xml_constraintlayout4_scene">

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="352dp"
            android:layout_height="223dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/borde_pantalla"
            android:fontFamily="@font/depot"
            android:gravity="bottom|right"
            android:textColor="@color/black"
            android:textSize="40dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.001" />

        <TableLayout
            android:id="@+id/tableLayout8"
            android:layout_width="380dp"
            android:layout_height="169dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.439">

            <TableRow>

                <Button

                    android:id="@+id/btnRaiz"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="√x"

                    android:textColor="@color/white"


                    />

                <Button
                    android:id="@+id/btnPi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="π"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnPotencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="^"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnFactorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="!"

                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="E"

                    android:textColor="@color/white" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnSeno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="sin"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnCos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="cos"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnTangente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="tan"

                    android:textColor="@color/white" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnParentesisAbierto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="("
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnParentesisCerrado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text=")"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnLogaritNatural"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="ln"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnLogaritmo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="Log"
                    android:textColor="@color/white" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout7"
            android:layout_width="382dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.655"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.635">

            <TableRow
                android:layout_width="372dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnPorcentaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="%"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnradiasexa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:text="RAD"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnAC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:backgroundTint="@color/azul2"
                    android:text="AC"
                    android:textColor="@color/white" />

                <ImageButton
                    android:id="@+id/btnBorrar"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_button"
                    android:backgroundTint="@color/azul2"


                    android:src="@android:drawable/ic_input_delete" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="369dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:theme="@style/Theme.CalculadoraBasica"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.929">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="282dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borde_fondo">

                    <TableRow>

                        <Button
                            android:id="@+id/btnSiete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="7"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnOcho"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="8"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnNueve"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="9"
                            android:textColor="@color/white"
                            android:textSize="20dp" />


                    </TableRow>

                    <TableRow>

                        <Button
                            android:id="@+id/btnCuatro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="4"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnCinco"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnSeis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="6"
                            android:textColor="@color/white"

                            android:textSize="20dp" />


                    </TableRow>

                    <TableRow>

                        <Button
                            android:id="@+id/btnUno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnDos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnTres"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="20dp" />


                    </TableRow>

                    <TableRow android:layout_height="97dp">


                        <Button
                            android:id="@+id/btnPunto"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"

                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/depot"
                            android:text="."
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <Button
                            android:id="@+id/btnCero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/black"
                            android:fontFamily="@font/mono_osd"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnIgual"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            android:backgroundTint="@color/white"
                            android:text="="
                            android:textColor="@color/black"

                            />


                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnMas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/borde_button"
                        android:backgroundTint="@color/azulnuevo"
                        android:text="➕" />

                    <Button
                        android:id="@+id/btnMenos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/borde_button"
                        android:backgroundTint="@color/azulnuevo"
                        android:text="➖" />

                    <Button
                        android:id="@+id/btnPor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/borde_button"
                        android:backgroundTint="@color/azulnuevo"
                        android:text="✖️"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnDivicion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/borde_button"
                        android:backgroundTint="@color/azulnuevo"
                        android:text="➗"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.motion.widget.MotionLayout>


</FrameLayout>